            </Grid>
          </Grid>
          <TextBlock Grid.Column="1" Text="{Binding Text, ElementName=TheMessageBox, FallbackValue=This is the message.}" FontSize="15" Foreground="{Binding Foreground, ElementName=OkBtn}" TextWrapping="Wrap" Margin="20,24" VerticalAlignment="Center"/>
        </Grid>
        <Grid Background="#20000000">
          <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="12,8,8,8">
            <Button x:Name="OkBtn" Content="OK" Width="100" Margin="8,0,0,0" Visibility="Collapsed" Style="{StaticResource Style.Button.Option}"/>
            <Button x:Name="YesBtn" Content="Yes" Width="100" Margin="8,0,0,0" Visibility="Collapsed" Style="{StaticResource Style.Button.Option}"/>
            <Button x:Name="NoBtn" Content="No" Width="100" Margin="8,0,0,0" Visibility="Collapsed" Style="{StaticResource Style.Button.Option}"/>
            <Button x:Name="CancelBtn" Content="Cancel" Width="100" Margin="8,0,0,0" Visibility="Collapsed" Style="{StaticResource Style.Button.Option}"/>
          </StackPanel>
        </Grid>
      </StackPanel>
    </Grid>

    <Grid x:Name="Interaction">
      <i:Interaction.Triggers>
        <ei:DataTrigger Binding="{Binding DefaultButton, ElementName=TheMessageBox}" Value="OK">
          <ei:ChangePropertyAction PropertyName="Tag" Value="{Binding ElementName=OkBtn}"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding DefaultButton, ElementName=TheMessageBox}" Value="Yes">
          <ei:ChangePropertyAction PropertyName="Tag" Value="{Binding ElementName=YesBtn}"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding DefaultButton, ElementName=TheMessageBox}" Value="No">
          <ei:ChangePropertyAction PropertyName="Tag" Value="{Binding ElementName=NoBtn}"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding DefaultButton, ElementName=TheMessageBox}" Value="Cancel">
          <ei:ChangePropertyAction PropertyName="Tag" Value="{Binding ElementName=CancelBtn}"/>
        </ei:DataTrigger>

        <ei:DataTrigger Binding="{Binding Button, ElementName=TheMessageBox}" Value="OK">
          <ei:ChangePropertyAction TargetName="OkBtn" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="CloseBtn" PropertyName="Tag" Value="{x:Static MessageBoxResult.OK}"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding Button, ElementName=TheMessageBox}" Value="OKCancel">
          <ei:ChangePropertyAction TargetName="OkBtn" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="CancelBtn" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="CloseBtn" PropertyName="Tag" Value="{x:Static MessageBoxResult.Cancel}"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding Button, ElementName=TheMessageBox}" Value="YesNoCancel">
          <ei:ChangePropertyAction TargetName="YesBtn" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="NoBtn" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="CancelBtn" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="CloseBtn" PropertyName="Tag" Value="{x:Static MessageBoxResult.Cancel}"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding Button, ElementName=TheMessageBox}" Value="YesNo">
          <ei:ChangePropertyAction TargetName="CloseBtn" PropertyName="Visibility" Value="Collapsed"/>
          <ei:ChangePropertyAction TargetName="YesBtn" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="NoBtn" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="CloseBtn" PropertyName="Tag" Value="{x:Static MessageBoxResult.None}"/>
        </ei:DataTrigger>

        <ei:DataTrigger Binding="{Binding Icon, ElementName=TheMessageBox}" Value="Error">
          <ei:ChangePropertyAction TargetName="Icon" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="Error" PropertyName="Visibility" Value="Visible"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding Icon, ElementName=TheMessageBox}" Value="Question">
          <ei:ChangePropertyAction TargetName="Icon" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="Question" PropertyName="Visibility" Value="Visible"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding Icon, ElementName=TheMessageBox}" Value="Warning">
          <ei:ChangePropertyAction TargetName="Icon" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="Warning" PropertyName="Visibility" Value="Visible"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding Icon, ElementName=TheMessageBox}" Value="Information">
          <ei:ChangePropertyAction TargetName="Icon" PropertyName="Visibility" Value="Visible"/>
          <ei:ChangePropertyAction TargetName="Info" PropertyName="Visibility" Value="Visible"/>
        </ei:DataTrigger>

        <i:EventTrigger EventName="Loaded">
          <ei:ControlStoryboardAction Storyboard="{StaticResource Anim.Show}"/>
          <noesis:SetFocusAction TargetObject="{Binding Tag, ElementName=Interaction}"/>
        </i:EventTrigger>

        <i:EventTrigger EventName="Click" SourceName="CloseBtn">
          <ei:ChangePropertyAction TargetName="Dialog" PropertyName="Tag" Value="{Binding Tag, ElementName=CloseBtn}"/>
          <ei:ControlStoryboardAction Storyboard="{StaticResource Anim.Hide}"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="Click" SourceName="OkBtn">
          <ei:ChangePropertyAction TargetName="Dialog" PropertyName="Tag" Value="{x:Static MessageBoxResult.OK}"/>
          <ei:ControlStoryboardAction Storyboard="{StaticResource Anim.Hide}"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="Click" SourceName="YesBtn">
          <ei:ChangePropertyAction TargetName="Dialog" PropertyName="Tag" Value="{x:Static MessageBoxResult.Yes}"/>
          <ei:ControlStoryboardAction Storyboard="{StaticResource Anim.Hide}"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="Click" SourceName="NoBtn">
          <ei:ChangePropertyAction TargetName="Dialog" PropertyName="Tag" Value="{x:Static MessageBoxResult.No}"/>
          <ei:ControlStoryboardAction Storyboard="{StaticResource Anim.Hide}"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="Click" SourceName="CancelBtn">
          <ei:ChangePropertyAction TargetName="Dialog" PropertyName="Tag" Value="{x:Static MessageBoxResult.Cancel}"/>
          <ei:ControlStoryboardAction Storyboard="{StaticResource Anim.Hide}"/>
        </i:EventTrigger>

        <ei:StoryboardCompletedTrigger Storyboard="{StaticResource Anim.Hide}">
          <i:InvokeCommandAction Command="{Binding Close, ElementName=TheMessageBox}" CommandParameter="{Binding Tag, ElementName=Dialog}"/>
        </ei:StoryboardCompletedTrigger>
      </i:Interaction.Triggers>
    </Grid>

  </Grid>

</UserControl>